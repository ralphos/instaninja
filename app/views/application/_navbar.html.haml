%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'instaninja_logo.png'
        %span InstaNinja

    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - if current_user
        %ul.nav.navbar-nav
          = nav_link 'Hashtags', hashtags_path
          = nav_link 'Users', user_likes_path
          = nav_link 'Commenters', user_commenters_path

        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = image_tag current_user.profile_picture, width: 30
              = capitalize(current_user.full_name)
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'Settings', '#'
              %li.divider
              %li
                = link_to 'Log out', sign_out_path
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to 'Login', authenticate_instagram_path
